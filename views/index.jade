  #register.container.col-xs-6
    h2 Register
    form#registerUser
      .form-group
        label(for='email') Email address
        input#emailR.form-control(type='email', placeholder='Email')
      .form-group
        label(for='password') Password
        input#passwordR.password.form-control(type='password', placeholder='Password')
      .form-group
        label(for='password2') Password (again)
        input#passwordR2.password.form-control(type='password', placeholder='Password')
      button.btn.btn-default(type='submit') Register

