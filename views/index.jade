    .mtl.pbm
      ._6a._6b.mrl(style='text-align: center; width: 55px')
        img.img(src='https://scontent.fsnc1-1.fna.fbcdn.net/hphotos-xaf1/t39.2365-6/851585_216271631855613_2121533625_n.png', alt='', style='vertical-align: middle')
